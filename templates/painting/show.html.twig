{% extends 'base.html.twig' %}

{% block title %}Painting: {{ painting.title }}{% endblock %}

{% block main %}
<div class="container mt-5">
    <!-- Page Title -->
    <h1 class="mb-4 text-center fw-bold" style="color: #4b0082; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);">
        <i class="bi bi-brush"></i> {{ painting.title }}
    </h1>

    <!-- Painting Details Table -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
        <div class="card-body">
            <h2 class="h5 mb-3 text-primary">Détails du Tableau</h2>
            <table class="table table-striped table-hover align-middle">
                <tbody>
                    <tr>
                        <th scope="row" class="text-secondary">ID</th>
                        <td>{{ painting.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-secondary">Titre</th>
                        <td>{{ painting.title }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-secondary">Artiste</th>
                        <td>{{ painting.artist }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-secondary">Année de Création</th>
                        <td>{{ painting.creationYear }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-secondary">Description</th>
                        <td>{{ painting.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-secondary">Style</th>
                        <td>{{ painting.style }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-secondary">Image</th>
                        <td>
                            {% if painting.imageName %}
                                <img src="{{ vich_uploader_asset(painting, 'imageFile') }}" alt="{{ painting.title }}" class="img-fluid rounded shadow-sm" style="max-width: 300px; border: 1px solid #ddd;">
                            {% else %}
                                <span class="text-muted">Pas d'image disponible</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_painting_index') }}" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_painting_edit', {'id': painting.id}) }}" class="btn btn-outline-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>
        {{ include('painting/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
