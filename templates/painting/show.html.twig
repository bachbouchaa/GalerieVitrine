{% extends 'base.html.twig' %}

{% block title %}Painting: {{ painting.title }}{% endblock %}

{% block main %}
<div class="container mt-5">
    <!-- Painting Details Card -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
        <!-- Card Header with Title -->
        <div class="card-header bg-primary text-white text-center">
            <h1 class="h5 mb-0"><i class="bi bi-palette me-2"></i>{{ painting.title }}</h1>
        </div>
        <!-- Card Body with Painting Details -->
        <div class="card-body">
            <div class="row">
                <!-- Painting Image -->
                <div class="col-md-4 text-center mb-3">
                    {% if painting.imageName %}
                        <img src="{{ vich_uploader_asset(painting, 'imageFile') }}" alt="{{ painting.title }}" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;">
                    {% else %}
                        <div class="text-muted">No image available</div>
                    {% endif %}
                </div>
                <!-- Painting Information -->
                <div class="col-md-8">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>ID:</strong> {{ painting.id }}
                        </li>
                        <li class="list-group-item">
                            <strong>Title:</strong> {{ painting.title }}
                        </li>
                        <li class="list-group-item">
                            <strong>Artist:</strong> {{ painting.artist }}
                        </li>
                        <li class="list-group-item">
                            <strong>Year of Creation:</strong> {{ painting.creationYear }}
                        </li>
                        <li class="list-group-item">
                            <strong>Description:</strong>
                            <p class="mb-0">{{ painting.description }}</p>
                        </li>
                        <li class="list-group-item">
                            <strong>Style:</strong> {{ painting.style }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Card Footer with Action Buttons -->
        <div class="card-footer text-center">
            <div class="d-flex justify-content-center">
                <a href="{{ path('app_painting_index') }}" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a href="{{ path('app_painting_edit', {'id': painting.id}) }}" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                {{ include('painting/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
