{% extends 'base.html.twig' %}

{% block title %}Paintings Index{% endblock %}

{% block main %}
<div class="container mt-5">
    <!-- Page Title -->
<h1 class="mb-4 text-center fw-bold" style="color: #007bff; font-size: 2.5rem; letter-spacing: 1px; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);">
    <i class="bi bi-palette-fill me-2"></i> Paintings Index
</h1>

    <!-- Painting Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Artist</th>
                    <th scope="col">Creation Year</th>
                    <th scope="col">Description</th>
                    <th scope="col">Style</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for painting in paintings %}
                    <tr>
                        <td>{{ painting.id }}</td>
                        <td>{{ painting.title }}</td>
                        <td>{{ painting.artist }}</td>
                        <td>{{ painting.creationYear }}</td>
                        <td>{{ painting.description }}</td>
                        <td>{{ painting.style }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_painting_show', {'id': painting.id}) }}" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_painting_edit', {'id': painting.id}) }}" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
