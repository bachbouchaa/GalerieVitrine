<form method="post" action="{{ path('app_painting_delete', {'id': painting.id}) }}" onsubmit="return confirm('Are you sure you want to delete this painting?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ painting.id) }}">
    <button type="submit" class="btn btn-outline-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>
