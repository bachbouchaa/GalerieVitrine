{# templates/member/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Members{% endblock %}

{% block main %}
    <h1 class="mb-4">List of Members</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr>
                    <td>{{ member.id }}</td>
                    <td>{{ member.email }}</td>
                    <td>
                        <a href="{{ path('app_member_show', {'id': member.id}) }}" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No members found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
