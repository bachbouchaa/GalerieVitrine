{% extends 'base.html.twig' %}

{% block title %}Member: {{ member.email }}{% endblock %}

{% block main %}
<div class="container mt-5">
    <!-- Member Information -->
    <section class="mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm rounded-4 bg-light">
                    <div class="card-body text-center">
                        <h2 class="h4 mb-3 text-primary">Member Information</h2>
                        <p class="mb-2 fs-5"><strong>ID:</strong> {{ member.id }}</p>
                        <p class="fs-5"><strong>Email:</strong> {{ member.email }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Painting Collection -->
    <section class="mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm rounded-4 bg-white">
                    <div class="card-body text-center">
                        <h2 class="h4 mb-3 text-secondary">My Painting Collection</h2>
                        <a href="{{ path('painting_collection_show', {'id': myPaintingCollection.id}) }}" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-brush me-2"></i> Explore Collection
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Galleries -->
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <div class="text-center mb-4">
                    <h2 class="h4 text-success">My Galleries</h2>
                </div>
                <div class="row g-4">
                    {% for gallery in galleries %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm rounded-4 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-dark">
                                        <strong>{{ gallery.description }}</strong>
                                    </h5>
                                    <p class="mb-2">
                                        <span class="badge {{ gallery.published ? 'bg-success' : 'bg-danger' }}">
                                            {{ gallery.published ? 'Published' : 'Unpublished' }}
                                        </span>
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <a href="{{ path('app_gallery_show', {'id': gallery.id}) }}" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}" class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="text-center text-muted">No galleries found.</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- Create New Gallery -->
    <section class="text-center">
        <a href="{{ path('app_gallery_new', {'member_id': member.id}) }}" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Create New Gallery
        </a>
    </section>
</div>
{% endblock %}
