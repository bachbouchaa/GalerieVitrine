{# templates/my_painting_collection/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste de collections de tableaux{% endblock %}

{% block main %}
    <h1>Liste de collections de tableaux</h1>
    <p>Collections disponibles</p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for collection in collections %}
                <tr>
                    <td>{{ collection.id }}</td>
                    <td>{{ collection.name }}</td>
                    <td>{{ collection.description }}</td>
                    <td>
                        <a href="{{ path('painting_collection_show', {'id': collection.id}) }}" class="btn btn-primary btn-sm">
                            Voir
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucune collection disponible pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
