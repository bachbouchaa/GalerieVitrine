{% extends 'base.html.twig' %}

{% block title %}Edit Gallery{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="h4 mb-0">Edit Gallery</h2>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.published, 'Published', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.published, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_errors(form.published, {'attr': {'class': 'text-danger'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.paintings, 'Select Paintings', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.paintings, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.paintings, {'attr': {'class': 'text-danger'}}) }}
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            {{ include('gallery/_delete_form.html.twig') }}
                        </div>
                        <div>
                            <a href="{{ path('app_gallery_index') }}" class="btn btn-secondary me-2">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">{{ button_label|default('Update') }}</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
