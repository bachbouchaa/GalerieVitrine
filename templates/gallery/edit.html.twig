{% extends 'base.html.twig' %}

{% block title %}Edit Gallery{% endblock %}

{% block main %}
    <h1>Edit Gallery</h1>

    {{ form_start(form) }}
        {{ form_row(form.description, {'label': 'Description'}) }}
        {{ form_row(form.published, {'label': 'Published'}) }}
        {{ form_row(form.paintings, {
            'label': 'Select Paintings'
        }) }}
        <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_gallery_index') }}" class="btn btn-secondary mt-2">Back to list</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}

