{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block main %}
    <h1>Gallery Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gallery.description }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ gallery.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Paintings</th>
                <td>
                    <ul class="list-group">
                        {% for painting in gallery.paintings %}
                            <li class="list-group-item d-flex align-items-center">
                                {% if painting.imageName %}
                                    <img src="{{ vich_uploader_asset(painting, 'imageFile') }}" alt="{{ painting.title }}" class="img-thumbnail me-3" style="width: 100px; height: auto;">
                                {% else %}
                                    <div class="text-muted me-3" style="width: 100px; height: auto; text-align: center; line-height: 100px; border: 1px dashed #ccc;">
                                        No Image
                                    </div>
                                {% endif %}
                                <a href="{{ path('app_gallery_painting_show', { 'gallery_id': gallery.id, 'painting_id': painting.id }) }}" class="text-decoration-none">
                                    {{ painting.title }}
                                </a>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">No paintings available in this gallery.</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gallery_index') }}" class="btn btn-primary mt-2 mb-2">Back to list</a>
    <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}" class="btn btn-success mt-2 mb-2">Edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
