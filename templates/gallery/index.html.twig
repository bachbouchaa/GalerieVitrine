{% extends 'base.html.twig' %}

{% block title %}Gallery Index{% endblock %}

{% block main %}
    <h1>Gallery Index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        
        {% for gallery in galleries %}
            <tr>
                <td>{{ gallery.id }}</td>
                <td>{{ gallery.description }}</td>
                <td>{{ gallery.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_gallery_show', {'id': gallery.id}) }}" class="btn btn-info btn-sm">Show</a>
                    <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gallery_new') }}" class="btn btn-primary mt-2">Create New</a>
{% endblock %}
