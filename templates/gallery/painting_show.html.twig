{% extends 'base.html.twig' %}

{% block title %}Painting: {{ painting.title }}{% endblock %}

{% block main %}
<div class="container mt-5">
    <!-- Card Layout -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">
            <!-- Left Side: Painting Information -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h1 class="card-title fw-bold" style="color: #6a1b9a; font-size: 2rem;">
                        <i class="bi bi-palette me-2"></i> {{ painting.title }}
                    </h1>
                    <hr>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>ID:</strong> {{ painting.id }}
                        </li>
                        <li class="list-group-item">
                            <strong>Title:</strong> {{ painting.title }}
                        </li>
                        <li class="list-group-item">
                            <strong>Artist:</strong> {{ painting.artist }}
                        </li>
                        <li class="list-group-item">
                            <strong>Year of Creation:</strong> {{ painting.creationYear }}
                        </li>
                        <li class="list-group-item">
                            <strong>Description:</strong>
                            <p class="mb-0">{{ painting.description }}</p>
                        </li>
                        <li class="list-group-item">
                            <strong>Style:</strong> {{ painting.style }}
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Right Side: Painting Image -->
            <div class="col-md-4 text-center d-flex align-items-center" style="background-color: #f3e5f5;">
                {% if painting.imageName %}
                    <img src="{{ vich_uploader_asset(painting, 'imageFile') }}" alt="{{ painting.title }}" class="img-fluid rounded shadow-sm" style="max-height: 300px; margin: auto;">
                {% else %}
                    <div class="text-muted p-4">No image available</div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Action Buttons Positioned at the Bottom -->
    <div class="text-center mt-5">
        <div class="d-flex justify-content-center gap-3">
            <a href="{{ path('app_painting_index') }}" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
            <a href="{{ path('app_painting_edit', {'id': painting.id}) }}" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-pencil"></i> Edit Painting
            </a>
            {{ include('painting/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}

